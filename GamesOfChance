### Game 1 - Coin Flip ###
def coin_flip(money):

    print("Welcome to Coin Flip!")
    print()
    print("Current credit is: $" + str(money))
    print()

    while True:
        guess = input("Heads or Tails")
        guess = guess.lower()
        if (guess != "heads") and (guess != "tails"):
            print(guess)
            print ("Please enter either 'Heads' or 'Tails'. Try again.")
            continue
        else:
            break

    if (guess == "heads") or (guess == "Heads"):
        guess = 1
    else:
        guess = 2

    print()
    bet = place_bet(money)
    print()

    result = random.randint(1, 2)
    if (result == 1):
        print("Heads!")
    else:
        print("Tails!")

    print ()
    print ()

    if (guess != result):
        money = money - bet
        print("You lost!")
        print("Your credit is now $" + str(money))


    elif (guess == result):
        money = money + bet
        print("You've Won!")
        print("Your credit is now $" + str(money))




    print()
    game_over(money)
    print("Play again?")
    loop = input("y/n")

    if (loop != "y"):
        game_menu(money)
    else:
        coin_flip(money)

